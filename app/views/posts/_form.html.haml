.container
  %ul
    - post.errors.full_messages.each do |message|
      %li= message
  = form_with(model: post, local: true) do |f|
    %div
      = f.label :images, '投稿画像'
    %div
      = f.file_field :images, multiple: true
    %div
      = f.label :content, '内容'
    %div
      = f.text_area  :content
    = f.submit '保存', class: 'btn-primary'